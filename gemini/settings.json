{
  "context": {
    "fileFiltering": {
      "respectGitIgnore": false
    }
  },
  "mcpServers": {
    "svelte": {
      "command": "npx",
      "args": [
        "-y",
        "@sveltejs/mcp"
      ],
      "timeout": 20000,
      "trust": true
    },
    "playwright": {
      "command": "npx",
      "args": [
        "@playwright/mcp@latest"
      ],
      "timeout": 20000,
      "trust": true
    },
    "context7": {
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp"
      ],
      "timeout": 120000,
      "trust": true
    },
    "codex": {
      "command": "codex",
      "args": [
        "--sandbox",
        "workspace-write",
        "mcp-server"
      ],
      "timeout": 1000000,
      "trust": true
    }
  },
  "security": {
    "auth": {
      "selectedType": "oauth-personal"
    }
  },
  "general": {
    "previewFeatures": true
  }
}
